#!/usr/bin/env bash
# bin/dev - start Vite dev server for Vue

set -e  # exit on first error

# --- Check prerequisites ---
if ! command -v node >/dev/null 2>&1; then
  echo "âŒ Node.js is not installed. Please install Node.js v24+."
  exit 1
fi

if ! command -v npm >/dev/null 2>&1; then
  echo "âŒ npm is not installed. Please install it (comes with Node.js)."
  exit 1
fi

if [ ! -d "node_modules" ]; then
  echo "âš ï¸  node_modules not found. Installing dependencies..."
  npm install
fi

if [ ! -f "package.json" ]; then
  echo "âŒ package.json not found. Are you in the project root?"
  exit 1
fi

# --- Run the project ---
echo "ğŸš€ Starting Vue + Vite dev server..."
npm run dev
